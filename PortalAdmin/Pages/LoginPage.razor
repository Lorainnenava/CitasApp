@page "/"
@layout EmptyLayout
@inject ToastService Toast

<MudGrid Class="fill-grid">
	<MudHidden Breakpoint="Breakpoint.SmAndDown">
		<MudItem sm="6" Style="height: 100%;">
			<div style="height: 100%; width: 100%;">
				<img src="images/picture_one.jpg"
					 alt="imgLogin"
					 style="object-fit: cover; width: 100%; height: 100%; display: block;" />
			</div>
		</MudItem>
	</MudHidden>

	<MudItem xs="12" sm="6" Style="padding: 0; margin: 0; height: 100%; display: flex; align-items: center; justify-content: center;">
		<MudContainer Style="width:100%;" Class="d-flex flex-column justify-content-center align-items-center">
			<MudText Typo="Typo.h3" Class="pb-7 fw-semibold">Hospital App</MudText>
			<MudForm Model="@Model" @ref="@form" Validation="@(PropertyValidator.ValidateValue)" Style="width:100%;">
				<MudTextField Variant="Variant.Outlined" Label="Correo" @bind-Value="Model.Email" For="(()=> Model.Email)" />
				<MudTextField Variant="Variant.Outlined" Label="Contraseña" @bind-Value="Model.Password" For="(()=> Model.Password)" />
				<div class="d-flex justify-content-end pb-6">
					<MudLink Href="#" Typo="Typo.body2" Underline="Underline.Always">
						Olvidaste tu contraseña?
					</MudLink>
				</div>
				<MudButton FullWidth=true Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" OnClick="@(async () => await Submit())">Iniciar sesión</MudButton>
			</MudForm>
			<div Class="d-flex gap-2 pt-4">
				<MudText Typo="Typo.subtitle2">No tienes cuenta aun?</MudText>
				<MudLink Href="Registrarse" Typo="Typo.body2" Underline="Underline.Always">Registrate</MudLink>
			</div>
		</MudContainer>
	</MudItem>
</MudGrid>
